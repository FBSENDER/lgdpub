.my-container.mt-2
  .header 
    %p 发布任务 - 代课
  .container
    .columns
      .col-9.col-mx-auto
        = form_tag("/task/create_task_daike", method: "post", onsubmit: "return create_daike();") do 
          %label.form-label 代课日期
          %input#in_class_date.form-input{type: "date", placeholder: "代课日期", name: "class_date"}
          %p#in_class_date_p.form-input-hint.hide
          .m-2
          %label.form-label 课时
          %select.form-select.col-5{name: "class_time"}
            %option 上午
            %option 下午
            %option 晚上
          %select.form-select.col-5{name: "class_count"}
            %option 1、2节
            %option 3、4节
          .m-2
          %label.form-label 性别要求
          %select.form-select{name: "gender"}
            %option 男
            %option 女
          .m-2
          %label.form-label 代课费
          %select.form-select{name: "price"}
            %option 1元
            %option 2元
            %option 3元
            %option 4元
            %option 5元
            %option 6元
            %option 7元
            %option 8元
            %option 9元
            %option 10元
          .m-2
          %label.form-label 备注
          %input#in_remark.form-input{type: "text", placeholder: "备注 可不填", name: "remark",value: "#{@remark}"}
          .m-2
          %label.form-label 联系方式(至少留一种)
          %input#in_phone.form-input{type: "text", placeholder: "电话号码", name: "phone", value: "#{@phone}"}
          %p#in_phone_p.form-input-hint.hide
          .m-2
          %input#in_qq.form-input{type: "text", placeholder: "QQ号", name: "qq", value: "#{@qq}"}
          .m-2
          %input#in_wx.form-input{type: "text", placeholder: "微信号", name: "wx", value: "#{@wx}"}
          #message.has-error{class: "#{@message.empty? ? 'hide' : ''}"}
            %p.form-input-hint #{@message}
          .m-2
          %input.col-12.btn.btn-primary{type: "submit",value: "发布"}
        .m-2
