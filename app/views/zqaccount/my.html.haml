- title("我的")
- head_desc("")
- keywords("")

.my-container.mt-2{style: "padding:0;"}
  .panel
    .panel-header
      .mt-2
      .panel-title.h5.text-center.m-10  用户 #{@account.phone}
      - if @message != ""
        .toast.toast-success.mt-2
          %button.btn.btn-clear.float-right{onclick: "toast_hide(this);"}
          #{@message}
    %a.text-dark{href: "/zqaccount/password_new/"}
      .setting
        %i.icon.icon-edit
        %span.px-2 重置密码
        %i.icon.icon-arrow-right.float-right{style: "position:reltive;top:15px;margin-right:5px;"}
    %a.text-dark{href: "/zqaccount/sign_out/"}
      .setting{style: "border-bottom:10px solid #F7F7F7;"}
        %i.icon.icon-shutdown
        %span.px-2 退出登录
        %i.icon.icon-arrow-right.float-right{style: "position:reltive;top:15px;margin-right:5px;"}
    .my-container.m-10.mt-2
      %p{style: "margin: 0"} 
        每页展示最多展示 50 条内容
        - if @fail > 0
          %a{href: "?page=#{@page}&fail=0"} 查看所有状态
        - else
          %a{href: "?page=#{@page}&fail=1"} 只看失败状态
        %a.float-right{href: "/zqaccount/my_export?page=#{@page}&fail=#{@fail}", target: "_blank"} 导出本页
      %p{style: "margin: 0"}
        - if @page > 0
          %a{href: "?page=#{@page-1}&fail=#{@fail}"} 上一页
        - if @infos.size >= 50
          %a{href: "?page=#{@page+1}&fail=#{@fail}"} 下一页
      %table.table{style: "margin-bottom: 80px;"}
        %thead
          %tr
            %th 姓名
            %th 手机号
            %th 身份证号
            %th 淘宝ID
            %th 区域
            %th 状态
        %tbody
          - @infos.each do |info|
            - s = info.status == 1 ? '初始' : info.status == 2 ? '1688录入失败' : info.status == 3 ? '1688已录入' : info.status == 4 ? '设置离职初始' : info.status == 5 ? '1688已离职' : info.status == 6 ? '1688离职失败' : ''
            - r = info.status == 2 || info.status == 6 ? info.reason : ''
            %tr
              %td #{info.name}
              %td #{info.phone}
              %td #{info.pcode}
              %td #{info.tbid}
              %td #{info.place}
              %td 
                #{s}
                %br
                #{r}
